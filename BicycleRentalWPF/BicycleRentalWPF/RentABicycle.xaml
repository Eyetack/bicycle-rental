<Window x:Class="BicycleRentalWPF.RentABicycle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RentABicycle" Height="300" Width="452">
    <Grid>
        <Label Content="Rent A Bicycle" HorizontalAlignment="Left" Margin="184,10,0,0" VerticalAlignment="Top" Width="84"/>
        <Label Content="Enter Renter Banner Id:" HorizontalAlignment="Left" Margin="71,63,0,0" VerticalAlignment="Top" Width="136"/>
        <TextBox x:Name="RenterTextBox" HorizontalAlignment="Left" Height="23" Margin="212,66,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Choose Bicycle: " HorizontalAlignment="Left" Margin="82,111,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ChooseBicycleBox"  HorizontalAlignment="Left" Margin="212,115,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SubmitButton" Content="SUBMIT" HorizontalAlignment="Left" Margin="132,184,0,0" VerticalAlignment="Top" Width="75" Click="SubmitButton_Click"/>
        <Button x:Name="BackButton" Content="BACK" HorizontalAlignment="Left" Margin="257,184,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="BackButton_Click"/>

    </Grid>
</Window>
